{
    "extends": "standard",
    "globals": {
        "$": true,
        "Constants": true,
        "OVE": true
    },
    "overrides": [
        {
            "files": [ "**/view/*.js" ],
            "globals": {
                "initView": true,
                "log": true
            }
        },
        {
            "files": [ "**/control/*.js" ],
            "globals": {
                "initControl": true,
                "log": true
            }
        },
        {
            "files": [ "**/common/*.js" ],
            "globals": {
                "refreshSigma": true,
                "sigma": true
            },
            "rules": {
                "new-cap": ["error", { "newIsCap": true, "capIsNew": false, "newIsCapExceptions": ["sigma", "filter"] }]                
            }
        },
        {
            "files": [ "**/*.js" ],
            "globals": {
                "beginInitialization": true,
                "getClientSpecificURL": true,
                "loadSigma": true,
                "runOperation": true
            }
        }
    ],
    "rules": {
        "indent": ["error", 4, {
            "SwitchCase": 1,
            "VariableDeclarator": 1,
            "outerIIFEBody": 1,
            "MemberExpression": 1,
            "FunctionDeclaration": { "parameters": 1, "body": 1 },
            "FunctionExpression": { "parameters": 1, "body": 1 },
            "CallExpression": { "arguments": 1 },
            "ArrayExpression": 1,
            "ObjectExpression": 1,
            "ImportDeclaration": 1,
            "flatTernaryExpressions": false,
            "ignoreComments": false
        }],
        "semi": ["error", "always"]
    }
}
