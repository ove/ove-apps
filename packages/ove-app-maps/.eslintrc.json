{
    "extends": "standard",
    "globals": {
        "$": true,
        "Constants": true,
        "fetch": true,
        "OVE": true
    },
    "overrides": [
        {
            "files": [ "**/view/*.js" ],
            "globals": {
                "initThenUpdateMap": true,
                "initView": true,
                "log": true,
                "updateMap": true
            }
        },
        {
            "files": [ "**/control/*.js" ],
            "globals": {
                "initControl": true,
                "location": true,
                "log": true,
                "uploadMapPosition": true
            }
        },
        {
            "files": [ "**/libraries/*.js" ],
            "rules": {
                "new-cap": ["error", { "newIsCap": false, "capIsNew": false }],
                "no-unused-vars": ["error", {
                    "vars": "all",
                    "args": "none",
                    "ignoreRestSiblings": true,
                    "varsIgnorePattern": "OVE.*Map"}]
            }
        },
        {
            "files": [ "**/*.js" ],
            "globals": {
                "changeEvent": true,
                "initCommon": true,
                "sendDetails": true,
                "buildViewport": true,
                "initMap": true,
                "beginInitialization": true
            }
        }
    ],
    "rules": {
        "indent": ["error", 4, {
            "SwitchCase": 1,
            "VariableDeclarator": 1,
            "outerIIFEBody": 1,
            "MemberExpression": 1,
            "FunctionDeclaration": { "parameters": 1, "body": 1 },
            "FunctionExpression": { "parameters": 1, "body": 1 },
            "CallExpression": { "arguments": 1 },
            "ArrayExpression": 1,
            "ObjectExpression": 1,
            "ImportDeclaration": 1,
            "flatTernaryExpressions": false,
            "ignoreComments": false
        }],
        "semi": ["error", "always"]
    }
}
